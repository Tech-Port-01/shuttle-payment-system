{
  "version": 2,
  "name": "shuttle-payment-system",
  "public": true,
  
  "builds": [
    { "src": "api/ors.js", "use": "@vercel/node" },
    { "src": "api/quote.js", "use": "@vercel/node" }
  ],
  
  "routes": [
    {
      "src": "/api/ors",
      "dest": "/api/ors.js"
    },
    {
      "src": "/api/quote",
      "dest": "/api/quote.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/style.css", "destination": "/style.css" },
    { "source": "/script.js", "destination": "/script.js" }
  ]
}
